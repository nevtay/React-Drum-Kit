{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["plugin:prettier/recommended", "plugin:react/recommended", "standard"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "quotes": ["error", "double"],
    "semi": [0, "never"],
    "space-before-function-paren": "off",
    "no-unused-vars": "off"
  },
  "overrides": [
    {
      "files": ".prettierrc"
      // "options": { "parser": "json" }
    }
  ]
}
